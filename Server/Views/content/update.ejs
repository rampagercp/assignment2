<div class="row justify-content-lg-center g-3">
    <h1><%= title %> Clothing </h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Name</span>
            <input type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="Item Name" 
            name="name" value="  <% if(title == "Edit") { %><%= item.name %><% } else { %><%= clothing.names %><% } %> " require>
          
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Brand</span>
            <input type="text" class="form-control" placeholder="Brand" aria-label="Brand" aria-describedby="Item Brand" 
            name="brand" value="  <% if(title == "Edit") { %><%= item.brand %><% } else { %><%= clothing.brand %><% } %> " require>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Category</span>
            <input type="text" class="form-control" placeholder="Category" aria-label="Category" aria-describedby="Item Category" 
            name="category" value="  <% if(title == "Edit") { %><%= item.category %><% } else { %><%= clothing.category %><% } %> " require>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Colour</span>
            <input type="text" class="form-control" placeholder="Colour" aria-label="Colour" aria-describedby="Item Colour" 
            name="colour" value="  <% if(title == "Edit") { %><%= item.colour %><% } else { %><%= clothing.colour %><% } %> " require>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Size</span>
            <input type="text" class="form-control" placeholder="Size" aria-label="Size" aria-describedby="Item Size" 
            name="size" value="  <% if(title == "Edit") { %><%= item.size %><% } else { %><%= clothing.size %><% } %> " require>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Price</span>
            <input type="text" class="form-control" placeholder="Price" aria-label="Price" aria-describedby="Item Price" 
            name="price" value="  <% if(title == "Edit") { %><%= item.price %><% } else { %><%= clothing.price %><% } %> " require>
        </div>
        
        <% if(title == "Edit") { %>
                <button type="submit" id="editButton" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
            <% } else { %>
                <button type="submit" id="addButton" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
            <% } %>  
            
            <a href="/clothing-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
    </form>
</div>