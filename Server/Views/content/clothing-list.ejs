<h1>Business Contacs</h1>
<div class="row">
    <div class="col">

        <% if(displayName){ %>
            <a href="/clothing-list/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i>Add Contact </a>
        <% } %>
        <!--A table goes here-->

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Number</th>
                    <th scope="col">Email</th>

                    <% if(displayName){ %>
                    <th></>
                    <th></th>
                    <% } %>
                </tr>
            </thead>
            <tbody>

                <!--Looping Row Template-->

                <% for (let count =0; count < clothing.length ; count++){ %> 
                <tr>
                    <th scope="row"><%= count + 1 %> </th>
                    <td><%= clothing[count].name %></td>
                    <td><%= clothing[count].number %></td>
                    <td><%= clothing[count].email %></td>

                    <% if(displayName){ %>

                    <td class="text-center"><a href="/clothing-list/edit/<%= clothing[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm">Edit</i></a></td>
                    <td class="text-center"><a href="/clothing-list/delete/<%= clothing[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm">Delete</i></a></td>
                <% } %>
                </tr>
                <% } %> 
            </tbody>
        </table>

        


    </div>
</div>